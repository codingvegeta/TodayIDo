    <jsp-config>
        <jsp-property-group>
            <url-pattern>/chap07/view/*</url-pattern>
            <include-prelude>/chap07/common/variable.jspf</include-prelude>
            <include-coda>/chap07/common/footer.jspf</include-coda>
        </jsp-property-group>
    </jsp-config>

