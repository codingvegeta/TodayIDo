<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN"
        "http://castor.org/mapping.dtd">
<mapping>
    <class name="chapter7.jaxb.Sqlmap">
        <map-to xml="sqlmap"/>
        <field name="sql" type="chapter7.jaxb.SqlType" required="true" collection="arraylist">
            <bind-xml name="sql" node="element"/>
        </field>
    </class>

    <class name="chapter7.jaxb.SqlType">
        <map-to xml="sql"/>
        <field name="key" type="string" required="true">
        </field>
        <field name="value" type="string" required="true">
            <bind-xml node="text"/>
        </field>
    </class>
</mapping>